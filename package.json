{
  "name": "lithless",
  "version": "0.0.0",
  "description": "A Web Components library built with Lit",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "npm run pm2:start:dev && echo 'Storybook 已启动在 http://localhost:6006'",
    "demo": "npm run build && cp -r dist/* demo/static/ && npm run pm2:start:demo && echo 'Demo 已启动在 http://localhost:3006'",
    "dev:stop": "pm2 stop lithless-storybook",
    "demo:stop": "pm2 stop lithless-demo",
    "pm2:start": "npm run build && pm2 start ecosystem.config.cjs",
    "pm2:start:dev": "pm2 start ecosystem.config.cjs --only lithless-storybook",
    "pm2:start:demo": "pm2 start ecosystem.config.cjs --only lithless-demo",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:logs:dev": "pm2 logs lithless-storybook",
    "pm2:logs:demo": "pm2 logs lithless-demo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run lint && npm run typecheck && npm test",
    "clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,jsx,json,css,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "web-components",
    "lit",
    "typescript",
    "ui-components"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.31.0",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-vitest": "^9.0.16",
    "@storybook/web-components-vite": "^9.0.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/node": "^20.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "pm2": "^6.0.8",
    "prettier": "^3.6.2",
    "serve": "^14.2.4",
    "storybook": "^9.0.16",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.37.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
